<% content_for :stylesheets do %>
    <%= stylesheet_link_tag 'users' %>
<% end %>

<% breadcrumb :scores %>
<div class="page-content">
  <div class="page-header position-relative">
    <h1>Listing scores</h1>
  </div><!--/.page-header-->

  <div class="row-fluid">
    <div class="span12">
      <%= form_tag scores_path ,remote: true, :method => 'get',:id => "scores_search" do %>
          <p class="form-inline"><%= text_field_tag :search, params[:search],:placeholder=>"Search char name..." %>
            <%= submit_tag "Search", :name => nil,:class => 'btn btn-primary' %>
          </p>
          <div id="score_table">
            <%= render 'scores' %>
          </div>
      <% end %>

      <div class="space-4"></div>
      <%= link_to 'New Score', new_score_path,:class => 'btn btn-primary btn-small' %>
    </div>
  </div>
</div>

<script>
    $(function () {
        // Search form.
        $('#scores_search').submit(function () {
            $.get(this.action, $(this).serialize(), null, 'script');
            return false;
        });
    });
</script>



