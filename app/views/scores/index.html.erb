<h1>Listing scores</h1>

<table>
  <tr>
    <th>User</th>
    <th>Character</th>
    <th>Time stamp</th>
    <th>Score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scores.each do |score| %>
  <tr>
    <td><%= score.user ? score.user.username : "" %></td>
    <td><%= score.character ? score.character.char_name : "" %></td>
    <td><%= score.created_at %></td>
    <td><%= score.score %></td>
    <td><%= link_to 'Show', score %></td>
    <td><%= link_to 'Edit', edit_score_path(score) %></td>
    <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

