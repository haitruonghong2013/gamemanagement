<%= simple_form_for(@race) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :atk1 %>
    <%= f.input :atk2 %>
    <%= f.input :atk3 %>
    <%= f.input :def %>
    <%= f.input :hp %>
    <%= f.input :mp %>
    <%= f.input :char_race %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
