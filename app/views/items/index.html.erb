<% breadcrumb :items %>
<div class="page-content">
  <div class="page-header position-relative">
    <h1>Listing items</h1>
  </div><!--/.page-header-->

  <div class="row-fluid">
    <div class="span12">
      <table class="table table-striped table-bordered table-hover pretty">
        <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Item type</th>
    <th>Item group</th>
    <th>Level</th>
    <th>Health</th>
    <th>Atk</th>
    <th>Def</th>
    <th>Gold</th>
    <th>Gem</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
        <tbody>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td><%= item.item_type ? item.item_type.name : '' %></td>
    <td><%= item.item_group ? item.item_group.name : '' %></td>
    <td><%= item.level %></td>
    <td><%= item.health %></td>
    <td><%= item.atk %></td>
    <td><%= item.def %></td>
    <td><%= item.gold %></td>
    <td><%= item.gem %></td>

    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
        </tbody>
      </table>
      <div class="digg_pagination" style="background: transparent;">
        <%= will_paginate @items %>
      </div>

      <div class="space-4"></div>
      <%= link_to 'New Item', new_item_path, :class => 'btn btn-primary btn-small' %>
    </div>
  </div>
</div>

