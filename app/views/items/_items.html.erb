<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="table table-striped table-bordered table-hover pretty">
  <thead>
  <tr>
    <th><%= sortable "name" %></th>
    <th>Description</th>
    <th>Gold</th>
    <th>Gem</th>
    <th>Item type</th>
    <th>Item group</th>
    <th>Level</th>
    <th>Health</th>
    <th>Atk</th>
    <th>Def</th>
    <th>Dam</th>
    <th>%Dam</th>
    <th>%Atk</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>

  <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.gold %></td>
        <td><%= item.gem %></td>
        <td><%= item.item_type ? item.item_type.name : '' %></td>
        <td><%= item.item_group ? item.item_group.name : '' %></td>
        <td><%= item.level %></td>
        <td><%= item.health %></td>
        <td><%= item.atk %></td>
        <td><%= item.def %></td>
        <td><%= item.dam %></td>
        <td><%= item.pc_dam %></td>
        <td><%= item.pc_atk %></td>


        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="digg_pagination" style="background: transparent;">
  <%= will_paginate @items %>
</div>