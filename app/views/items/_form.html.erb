<%= simple_form_for @item,  html:{:id => 'add_new_item',:class => 'form-horizontal'} do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :item_type do %>
        <%= f.select :item_type_id, ItemType.all.map { |r| [r.name, r.id] }, include_blank: false %>
    <% end %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :level %>
    <%= f.input :health %>
    <%= f.input :atk %>
    <%= f.input :def %>
    <%= f.input :gold %>
    <%= f.input :gem %>
    <%= f.input :dam %>
    <%= f.input :pc_dam %>
    <%= f.input :pc_atk %>
    <%= f.input :permanent %>

  </div>
    <%= f.button :submit,:class =>'btn-primary' %>
<% end %>
