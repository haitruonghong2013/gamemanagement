<% breadcrumb :item_types %>
<div class="page-content">
  <div class="page-header position-relative">
    <h1>Listing item_types</h1>
  </div><!--/.page-header-->

  <div class="row-fluid">
    <div class="span12">
      <table class="table table-striped table-bordered table-hover pretty">
        <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Item Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
            </thead>
        <tbody>
<% @item_types.each do |item_type| %>
  <tr>
    <td><%= item_type.name %></td>
    <td><%= item_type.description %></td>
    <td><%= item_type.item_group ? item_type.item_group.name : '' %></td>
    <td><%= link_to 'Show', item_type %></td>
    <td><%= link_to 'Edit', edit_item_type_path(item_type) %></td>
    <td><%= link_to 'Destroy', item_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
        </tbody>
</table>
      <div class="digg_pagination" style="background: transparent;">
        <%= will_paginate @item_types %>
      </div>

      <div class="space-4"></div>
      <%= link_to 'New Item type', new_item_type_path, :class => 'btn btn-primary btn-small' %>
    </div>
  </div>
</div>


