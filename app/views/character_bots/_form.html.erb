<%= simple_form_for @character_bot,  html:{:id => 'add_new_character_bot',:class => 'form-horizontal'} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :char_name %>
    <%= f.input :gold %>
    <%= f.input :lv %>
    <%= f.input :atk1 %>
    <%= f.input :atk2 %>
    <%= f.input :atk3 %>
    <%= f.input :def %>
    <%= f.input :hp %>
    <%= f.input :medal %>
    <%= f.label :char_gender %>
    <%= f.input :char_gender, :collection => [['Male',0],['Female',1]], :as => :radio_buttons,
                :label_method => lambda {|t| "<span class='lbl'>".html_safe + t[0].titleize + "</span>".html_safe}, :label => false,
                #:item_wrapper_class => 'inline',
                checked: @character_bot.char_gender == true ? 1 : 0
    %>
    <%= f.input :char_race %>
  </div>
    <%= f.button :submit, :class =>'btn-primary' %>
<% end %>
