<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="table table-striped table-bordered table-hover pretty">

  <thead>
  <tr>
    <!--<th>UserName</th>-->
    <th><%= sortable "username" %></th>

    <th>Email</th>
    <th>FirstName</th>
    <th>LastName</th>
    <th>Phone</th>
    <th>Role</th>
    <th>TimeZone</th>
    <th style="width: 150px !important;"></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>

        <td><%= user.username ?  link_to(user.username, user) : '' %></td>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.telephone %></td>
        <td><%= user.roles and user.roles.first ? user.roles.first.name : '' %></td>
        <td><%= user.time_zone %></td>
        <!--<td><%= link_to 'Show', user %></td>-->
        <!--<td><%= link_to 'Edit', edit_user_path(user) %></td>-->
        <!--<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        <td class="badge-right right">
          <div class="align-center">
            <a class="btn btn-mini btn-info" href="<%= edit_user_path(user) %>">
              <i class="icon-edit bigger-120"></i>
            </a>
            <a class="btn btn-mini btn-danger"
               rel="nofollow"  data-method="delete" data-confirm="Are you sure?" href="<%= user_path(user) %>">
              <i class="icon-trash bigger-120"></i>
            </a>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="digg_pagination" style="background: transparent;">
  <%= will_paginate @users %>
</div>