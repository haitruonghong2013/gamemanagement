<h1>Listing user_items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Level</th>
    <th>Health</th>
    <th>Atk</th>
    <th>Def</th>
    <th>User</th>
    <th>Character</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user_items.each do |user_item| %>
  <tr>
    <td><%= user_item.name %></td>
    <td><%= user_item.description %></td>
    <td><%= user_item.level %></td>
    <td><%= user_item.health %></td>
    <td><%= user_item.atk %></td>
    <td><%= user_item.def %></td>
    <td><%= user_item.user_id %></td>
    <td><%= user_item.character_id %></td>
    <td><%= link_to 'Show', user_item %></td>
    <td><%= link_to 'Edit', edit_user_item_path(user_item) %></td>
    <td><%= link_to 'Destroy', user_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

