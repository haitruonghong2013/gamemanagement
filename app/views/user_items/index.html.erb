<% breadcrumb :user_items %>
<div class="page-content">
  <div class="page-header position-relative">
    <h1>Listing user_items</h1>
  </div><!--/.page-header-->

  <div class="row-fluid">
    <div class="span12">
      <%= form_tag user_items_path ,remote: true, :method => 'get',:id => "user_items_search" do %>
          <p class="form-inline"><%= text_field_tag :search, params[:search],:placeholder=>"Search char name..." %>
            <%= submit_tag "Search", :name => nil,:class => 'btn btn-primary' %>
          </p>
          <div id="user_items_table">
            <%= render 'user_items' %>
          </div>
      <% end %>

      <div class="space-4"></div>
      <%= link_to 'New User item', new_user_item_path, :class => 'btn btn-primary btn-small' %>
    </div>
  </div>
</div>
<script>
    $(function () {
        // Search form.
        $('#user_items_search').submit(function () {
            $.get(this.action, $(this).serialize(), null, 'script');
            return false;
        });
    });
</script>





