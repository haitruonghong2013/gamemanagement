<% breadcrumb :item_groups %>
<div class="page-content">
  <div class="page-header position-relative">
    <h1>Listing item_groups</h1>
  </div><!--/.page-header-->

  <div class="row-fluid">
    <div class="span12">
      <table class="table table-striped table-bordered table-hover pretty">
        <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
        <tbody>

<% @item_groups.each do |item_group| %>
  <tr>
    <td><%= item_group.name %></td>
    <td><%= item_group.description %></td>
    <td><%= link_to 'Show', item_group %></td>
    <td><%= link_to 'Edit', edit_item_group_path(item_group) %></td>
    <td><%= link_to 'Destroy', item_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>
      <div class="digg_pagination" style="background: transparent;">
        <%= will_paginate @item_groups %>
      </div>

      <div class="space-4"></div>
      <%= link_to 'New Item group', new_item_group_path, :class => 'btn btn-primary btn-small' %>
    </div>
  </div>
</div>

